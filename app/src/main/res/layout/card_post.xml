<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_margin="@dimen/margin_default"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/description_post_author_avatar"
        android:src="@drawable/ic_baseline_more_vert_24"
        tools:srcCompat="@sample/posts_avatar" />

    <TextView
        android:id="@+id/author"
        android:layout_marginHorizontal="@dimen/margin_default"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@+id/avatar"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintBottom_toTopOf="@id/published"
        app:layout_constraintEnd_toStartOf="@id/menu"
        android:text="@sample/posts.json/data/author" />

    <TextView
        android:id="@+id/published"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/author"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        app:layout_constraintStart_toEndOf="@id/avatar"
        android:text="@sample/posts.json/data/published" />

    <ImageButton
        android:id="@+id/menu"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:layout_margin="@dimen/margin_default"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_more_vert_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/description_post_menu" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="avatar, published, menu"/>

    <TextView
        android:id="@+id/content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/barrierTop"
        android:autoLink="web"
        android:text="@sample/posts.json/data/content" />

    <ImageView
        android:id="@+id/likes"
        android:layout_width="@dimen/views_size"
        android:layout_height="@dimen/views_size"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/content"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/description_post_likes"
        android:src="@drawable/ic_heart_24"
        android:clickable="true" />

    <TextView
        android:id="@+id/likes_text"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginStart="3dp"
        android:layout_width="@dimen/views_size"
        android:layout_height="@dimen/views_size"
        app:layout_constraintTop_toBottomOf="@+id/content"
        app:layout_constraintStart_toEndOf="@id/likes"
        android:text="@sample/posts.json/data/likesCount" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="@dimen/views_size"
        android:layout_height="@dimen/views_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/content"
        app:layout_constraintStart_toStartOf="@id/likes_text"
        android:contentDescription="@string/description_post_shares"
        android:src="@drawable/ic_baseline_share_24"
        android:clickable="true" />

    <TextView
        android:id="@+id/shares_text"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginStart="3dp"
        android:layout_width="@dimen/views_size"
        android:layout_height="@dimen/views_size"
        app:layout_constraintTop_toBottomOf="@+id/content"
        app:layout_constraintStart_toEndOf="@id/share"
        android:text="@sample/posts.json/data/sharesCount" />

    <ImageView
        android:id="@+id/view"
        android:layout_width="@dimen/views_size"
        android:layout_height="@dimen/views_size"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/content"
        app:layout_constraintEnd_toStartOf="@id/view_text"
        android:contentDescription="@string/description_post_views"
        android:src="@drawable/ic_baseline_visibility_24"
        android:clickable="true" />

    <TextView
        android:id="@+id/view_text"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_width="@dimen/views_size"
        android:layout_height="@dimen/views_size"
        app:layout_constraintTop_toBottomOf="@+id/content"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@sample/posts.json/data/viewsCount" />

</androidx.constraintlayout.widget.ConstraintLayout>